{% extends 'base.html.twig' %}

{% block title %}Категория{% endblock %}

{% block body %}
    <h1>Категория</h1>
    <a class="btn" href="{{ path('category_index') }}">К списку</a>
    <a class="btn" href="{{ path('category_edit', {'id': category.id}) }}">Редактировать</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
