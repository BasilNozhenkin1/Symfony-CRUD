{% extends 'base.html.twig' %}

{% block title %}Список категорий{% endblock %}

{% block body %}
    <h1>Список категорий</h1>
    <a class="btn right-align" href="{{ path('category_new') }}">Создать новую</a>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Slug</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a class="btn" href="{{ path('category_show', {'id': category.id}) }}">Показать</a>
                    <a class="btn" href="{{ path('category_edit', {'id': category.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Записей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
